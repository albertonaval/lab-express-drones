<div class="conatiner mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create a new drone</h1>
            <form action="/drones/create" method="POST">
                <div class="class mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="class mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="class mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success p-2 mb-2">Creat Drone</button>
                    <a href="/" class="btn btn-dark p-2 mb-2">Go Home</a>
                </div>
            </form>
        </div>
    </div>

</div>
